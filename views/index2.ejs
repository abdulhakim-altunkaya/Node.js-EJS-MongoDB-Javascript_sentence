<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include("./partials/partial_2") %>
  </head>
  <body>
    <%- include("./partials/partial_1") %>

    <div class="new_main">
      <div id="searchBarArea">
        <form class="contact_form" action="/" method="post">
          <label for="input1"> English & Turkish Sentences </label><br>
          <label for="input1"> Ingilizce & Türkçe Cümleler </label><br>
          <span id="wordTag" style="display: none;"><%= word1 %></span>
          <span><input class="inputAreas" type="text" name="input1" id="mainInput" autofocus required>&nbsp;&nbsp;&nbsp;
            <button class="commentButton">Ara-Search</button></span>
        </form>
      </div>
      <% for (var key in personal_data) { %>
        <div class="commentBox">
          <span id="sentence1"><strong><%= personal_data[key].input1 %></strong></span>
          <span id="sentence2"><strong><%= personal_data[key].input2 %></strong></span>
        </div>
      <% } %>
    </div>
    <script type="text/javascript">
      $(document).ready(function(){
        document.getElementById("mainInput").value = document.getElementById("wordTag").innerHTML;
        document.getElementById("mainInput").select();
      });
    </script>
  </body>
</html>
